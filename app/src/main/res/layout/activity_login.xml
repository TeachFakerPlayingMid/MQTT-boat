<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:id="@+id/school_log"
        android:layout_centerHorizontal="true"
        android:background="@drawable/schoollog"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userID"
        android:textSize="16sp"
        android:textColor="#000000"
        android:hint="用户ID"
        android:drawablePadding="5dp"
        android:background="@drawable/bg_id"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:layout_below="@id/school_log" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/passkey"
        android:textSize="16sp"
        android:textColor="#000000"
        android:hint="密码"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:drawablePadding="5dp"
        android:background="@drawable/bg_id"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/userID"/>   <!-- 用暗纹标识密码 -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_et"
        android:layout_below="@id/passkey"
        android:layout_marginTop="40dp"
        android:text="登 录"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/logbtn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_enroll"
        android:layout_below="@id/btn_et"
        android:layout_marginTop="20dp"
        android:text="注 册"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/logbtn"/>

</RelativeLayout>